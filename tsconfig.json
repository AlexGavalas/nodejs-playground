{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Node",
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist"
    },
    "include": ["./server.ts"],
    "ts-node": {
        "transpileOnly": true,
        "transpiler": "ts-node/transpilers/swc",
        "files": true,
        "compilerOptions": {
            "module": "esnext",
            "isolatedModules": false
        }
    }
}
